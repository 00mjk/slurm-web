<div class="modal fade" id="modal-job" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="modal-job-title">Job {{job_id}}</h4>
      </div>
      <div class="modal-body" id="modal-job-body">
        <ul>
          <li>user: {{login}} ({{username}})</li>
          <li>state: {{job_state}}</li>
          <li>reason: {{printStateReason state_reason}}</li>
          <li>nodes: {{nodes}} ({{num_nodes}})</li>
          <li>cores: {{num_cpus}}</li>
          <li>account: {{account}}</li>
          <li>QOS: {{qos}}</li>
          <li>partition: {{partition}}</li>
          <li>exclusive: {{yesOrNo (!exclusive)}}</li>
          <li>command: {{printCommand command}}</li>
          <li>start time: {{printDateFromTimestamp start_time}}</li>
          <li>eligible time: {{printDateFromTimestamp eligible_time}}</li>
          <li>end time: {{printDateFromTimestamp end_time}}</li>
          <li>time limit: {{time_limit}} mins</li>
        </ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
